{
  "ConnectionStrings": {
    "CustomerDb": "Server=.\\SQLEXPRESS;Database=WiredBrain;Trusted_Connection=True;MultipleActiveResultSets=true;Application Name=wired-portal;"
  },
  "AllowedHosts": "*",
  "CustomerPortalSettings": {
    "PointsNeeded": 1000
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "Logging": {
    "ElasticSearchUri": "http://localhost:9200",
    "ElasticIndexFormatRoot": "wired",
    "ElasticBufferRoot": "C:/temp/logs/portal-buffer",
    "RollingFileName": "C:/temp/logs/flatlog-portal.json"
  }
}
